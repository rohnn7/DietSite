@page
@model DietSite.Pages.Register1Model
@{
    ViewData["Title"] = "Register1";
}
<section class="ftco-section ftco-services-2">
    <div id="content">
        
        <div class="container">
            <x:form method="post" class="mt-3 col-sm-10 bg-light ">
                <h1 class="text-center text-primary">Please Register</h1>
                <div class="form-group row">
                    <x:label asp-for="Name" class="col-sm-2 col-form-label mt-2 text-capitalize">Name</x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <x:label asp-for="Gender" class="col-sm-2 col-form-label mt-2"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:select asp-items="Model.GenderL" class="custom-select mr-sm-2">
                            <x:option>Please Select</x:option>
                        </x:select>
                    </div>
                </div>
                <div class="form-group row">
                    <x:label asp-for="Dob" class="col-sm-2 col-form-label mt-2 text-capitalize"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Dob" class="form-control" placeholder="DD/MM/YYYY" />
                    </div>
                </div>
                <div class="form-group row">
                    <x:label asp-for="Username" class="col-sm-2 col-form-label mt-2 text-capitalize"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Username" class="form-control" placeholder="Enter Email" />
                    </div>
                </div>
                <div class="form-group row">
                    <x:label asp-for="Password" class="col-sm-2 col-form-label mt-2 text-capitalize"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Password" class="form-control" placeholder="Choose Password" />
                    </div>
                </div>

                <div class="form-group row">
                    <x:label asp-for="Height" class="col-sm-2 col-form-label mt-2 text-capitalize"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Height" class="form-control" placeholder="Enter Height" />
                    </div>
                </div>

                <div class="form-group row">
                    <x:label asp-for="Weight" class="col-sm-2 col-form-label mt-2 text-capitalize"></x:label>
                    <div class="col-sm-8 mt-3">
                        <x:input asp-for="Weight" class="form-control" placeholder="Enter Weight" />
                        <br />
                    </div>
                </div>
                <div class="align-self-sm-center">
                    <div class="col-sm-12" >
                        <p align="center">
                            <x:a asp-page-handler="OnPostRegister" type="submit" class="btn btn-primary align-self-sm-center">Next</x:a>
                        </p>
                        <br /> <br />
                    </div>
                </div>
            </x:form>

        </div>
    </div>
</section>

